#!/usr/bin/python
from proc_yields import ProcYields
from disp_yields import DispYields
import sys

"""
py [dtyp] [simnum=siml] [usehel=False] [dbg=False]
"""
dtyp=sys.argv[1]

if len(sys.argv)>2:#i.e. simnum entered by user
	simnum=sys.argv[2]
else:
	simnum='siml'

if len(sys.argv)>3:#i.e. usehel entered by user
        if   sys.argv[3]=='True':  usehel=True
	elif sys.argv[3]=='False': usehel=False
        else: sys.exit("usehel=\'%s\' not valid. Exiting."%sys.argv[3])
	
else:
        usehel=False

if len(sys.argv)>4:#i.e. dbg entered by user
	if   sys.argv[4]=='True':  dbg=True
        elif sys.argv[4]=='False': dbg=False
        else: sys.exit("dbg=\'%s\' not valid. Exiting"%sys.argv[4])
else:
        dbg=False

py=ProcYields(dtyp,simnum=simnum,usehel=usehel,dbg=dbg)
py.execute()
