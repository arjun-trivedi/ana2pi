if len(sys.argv)>=2: #i.e. User input mthd 
        mthd=sys.argv[1]
else:
        mthd='mthd1'

if len(sys.argv)>=3: #i.e. User input R2s
        R2l=list(sys.argv[2])
else:
        R2l=['A','B','C','D']

if len(sys.argv)==4: #i.e. User input simnum, else use siml
	simnum=sys.argv[3]
else:
	simnum='siml'

print "Displaying Obs-R2: R2l=%s:mthd=%s,simnum=%s"%(R2l,mthd,simnum)
dy=DispYields(simnum)
dy.disp_obs_R2(mthd=mthd,R2l=R2l,q2min=1.25,q2max=1.75,dtypl=['EXP','SIM'],seql=['C','F'])

