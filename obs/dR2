#!/usr/bin/python
from proc_yields import ProcYields
from disp_yields import DispYields
import sys

#! ---------------------
#  dR2 [R2] [mthd] [simnum]
#!----------------------
if len(sys.argv)>=2: #i.e. User input R2 
        R2=sys.argv[1]
else:
        R2='D'

if len(sys.argv)>=3: #i.e. User input mthd 
        mthd=sys.argv[2]
else:
        mthd='mthd1'

if len(sys.argv)==4: #i.e. User input simnum, else use siml
	simnum=sys.argv[3]
else:
	simnum='siml'

print "Displaying Obs-R2: R2=%s,simnum=%s"%(R2,simnum)
dy=DispYields(simnum)
if R2=='A':
        dy.disp_obs_R2(R2='A',mthd=mthd,q2min=1.25,q2max=1.75,dtypl=['EXP','SIM'],seql=['C','F'])
        #dy.disp_obs_R2(R2='A',q2min=1.25,q2max=1.75,dtypl=['EXP'],seql=['C','F'])

	#dy.disp_obs_R2(R2='A',q2min=1.25,q2max=1.75,hel='UNPOL',dtypl=['EXP','SIM'],seql=['C','F'])
	#dy.disp_obs_R2(R2='A',q2min=1.25,q2max=1.75,hel='POS',  dtypl=['EXP'],seql=['C','F'])
	#dy.disp_obs_R2(R2='A',q2min=1.25,q2max=1.75,hel='NEG',  dtypl=['EXP'],seql=['C','F'])
elif R2=='B':
        dy.disp_obs_R2(R2='B',mthd=mthd,q2min=1.25,q2max=1.75,dtypl=['EXP','SIM'],seql=['C','F'])

	#dy.disp_obs_R2(R2='B',q2min=1.25,q2max=1.75,hel='UNPOL',dtypl=['EXP','SIM'],seql=['C','F'])
	#dy.disp_obs_R2(R2='B',q2min=1.25,q2max=1.75,hel='POS',  dtypl=['EXP'],seql=['C','F'])
	#dy.disp_obs_R2(R2='B',q2min=1.25,q2max=1.75,hel='NEG',  dtypl=['EXP'],seql=['C','F'])
elif R2=='C':
        dy.disp_obs_R2(R2='C',mthd=mthd,q2min=1.25,q2max=1.75,dtypl=['EXP','SIM'],seql=['C','F'])

	#dy.disp_obs_R2(R2='C',q2min=1.25,q2max=1.75,hel='UNPOL',dtypl=['EXP','SIM'],seql=['C','F'])
	#dy.disp_obs_R2(R2='C',q2min=1.25,q2max=1.75,hel='POS',  dtypl=['EXP'],seql=['C','F'])
	#dy.disp_obs_R2(R2='C',q2min=1.25,q2max=1.75,hel='NEG',  dtypl=['EXP'],seql=['C','F'])
elif R2=='D':
        dy.disp_obs_R2(R2='D',mthd=mthd,q2min=1.25,q2max=1.75,dtypl=['EXP','SIM'],seql=['C','F'])

	#dy.disp_obs_R2(R2='D',q2min=1.25,q2max=1.75,hel='UNPOL',dtypl=['EXP','SIM'],seql=['C','F'])
	#dy.disp_obs_R2(R2='D',q2min=1.25,q2max=1.75,hel='POS',  dtypl=['EXP'],seql=['C','F'])
	#dy.disp_obs_R2(R2='D',q2min=1.25,q2max=1.75,hel='NEG',  dtypl=['EXP'],seql=['C','F'])
else:
	print "R2=",R2,"is not valid. R2=A,B,C or D only"

