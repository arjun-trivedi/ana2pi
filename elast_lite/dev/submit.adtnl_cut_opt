#!/bin/bash

adtnl_cut_opt_arr=(dflt eid_ECin eid_ECfid eid_zvtx eid_etot eid_IU_no_SChit eid_IU_no_dc_stat eid_all eid_IU_all eid_all__eid_IU_all)
for adtnl_cut_opt in "${adtnl_cut_opt_arr[@]}";do
  echo "submitting exp and sim jobs for adtnl_cut_opt=$adtnl_cut_opt"
  submit.h10_2_delastR-exp-byRun_e_lite $adtnl_cut_opt
  submit.h10_2_delastR-sim_lite $adtnl_cut_opt sim4
  submit.h10_2_delastT-sim_lite $adtnl_cut_opt sim4
done
