print "obsd=",obsd
print "SS_tag=",SS_tag
do=DispObs('NA','NA','NA',Q2MIN_HIGH_Q2,Q2MAX_HIGH_Q2,WMIN,WMAX,expt,dbg,obsd=obsd,SS_tag=SS_tag)
do.disp_1D_SS()
