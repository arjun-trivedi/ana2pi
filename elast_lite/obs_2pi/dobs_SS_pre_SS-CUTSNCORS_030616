#! SS-Obs from h10_skim_SS
#!==========================
#! + lowQ2
obsd={
       1:['obs_dflt_eff_scpd_at_mod_dflt_lowQ2_SS3_from-h10-skim-SS_prll_030416/sim4_sim5_sim6_sim7',                       'eff_scpd_atmod'],
       2:['obs_dflt_dflt_ECfid-on_lowQ2_SS3_from-h10-skim-SS_prll_030416/sim4_sim5_sim6_sim7',                        'ECfid-on'],
