#       5:['obs_dflt_eff_scpd_at_mod_dflt_ECfid-on_lowQ2_SS3_022516/sim4_sim5_sim6_sim7',              'eff_scpd_atmod_ECfid-on'],
#       6:['obs_dflt_eff_scpd_at_mod_dflt_ECfid-on_at_mod_lowQ2_SS3_022516/sim4_sim5_sim6_sim7',       'eff_scpd_atmod_ECfid-on_atmod']
#}
#SS_tag='lowQ2_sim4_sim5_sim6_sim7'
