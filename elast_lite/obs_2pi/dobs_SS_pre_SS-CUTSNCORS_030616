}
SS_tag='lowQ2_sim4_sim5_sim6_sim7_from-h10-skim-SS_prll_030416'
print "Displaying SS-obs for obsdir q2min q2max wmin wmax expt dbg",'NA',Q2MIN_LOW_Q2,Q2MAX_LOW_Q2,WMIN,WMAX,expt,dbg
print "obsd=",obsd
print "SS_tag=",SS_tag
do=DispObs('NA','NA','NA',Q2MIN_LOW_Q2,Q2MAX_LOW_Q2,WMIN,WMAX,expt,dbg,obsd=obsd,SS_tag=SS_tag)
do.disp_1D_SS()

#! +highQ2
obsd={
       1:['obs_dflt_eff_scpd_at_mod_dflt_highQ2_SS3_from-h10-skim-SS_prll_030416/sim9',                       'eff_scpd_atmod'],
