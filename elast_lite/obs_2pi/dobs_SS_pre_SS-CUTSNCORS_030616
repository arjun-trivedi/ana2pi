#!/usr/bin/python
from disp_obs import DispObs
import sys

#! ---------------------
#  + Usage=dobs_SS [expt=e16] [dbg=False]
#  + SS inputs (dobsd, SS_tag) have to be entered manually
#  + NOTE, 'SS_tag' is used to name the output created
#!----------------------

#! *** Setup global parameters ***
#! Q2 limits for lowQ2
Q2MIN_LOW_Q2=2.00
Q2MAX_LOW_Q2=3.00
#! Q2 limits for highQ2
Q2MIN_HIGH_Q2=3.00
Q2MAX_HIGH_Q2=5.00
#! W limits
WMIN=1.400
WMAX=2.125

#! Get inputs from user
if len(sys.argv)>1: #! User input expt 
        expt=sys.argv[1]
        if expt!='e1f' and expt!='e16':
                sys.exit("expt=e1f or e16 only.")
else:
        expt='e16'

if len(sys.argv)>2: #! User input dbg, else use dbg=False
        if sys.argv[2]=="False":
                dbg=False
        elif sys.argv[2]=="True":
                dbg=True
        else:
                print "Please enter dbg=True or False!"
                sys.exit()
else:
        dbg="False"

#! Manual inputs for SS
#! syntax for obsd={obsnum:['obsdir','obstag']}

#! SS-Obs from h10_skim_e
#!=======================
#! + lowQ2
