#!/usr/bin/python
import sys,os
import time,datetime

#! The following to be able to use disp_obs.py 
sys.path.insert(0, os.path.join(os.environ['ANA2PI'],'elast_lite/obs_2pi'))
from disp_obs import DispObs

#! ---------------------
#  + Usage=dobs_cmb_non_vst_SE_result [per_non_vst_SE_date=today(mmddyy)]
#!----------------------

#! *** Setup global parameters ***
#! Q2 limits for lowQ2
Q2MIN=2.00
Q2MAX=3.00
#! W limits
WMIN=1.400
WMAX=2.125

#! Get inputs from user
if len(sys.argv)>1: #! User input per_non_vst_SE_date
        per_non_vst_SE_date=sys.argv[1]
else:
        per_non_vst_SE_date=datetime.datetime.now().strftime('%m%d%y')
print "per_non_vst_SE_date=",per_non_vst_SE_date

EXPT="e16"
DBG=True

obsd={
	1:['SS/dbg/lowQ2_fixMM2cut_062416_sim4_sim5_sim6_sim7_sim8_sim13_%s'%per_non_vst_SE_date, 'SS-bands'],
	2:['SS/dbg/lowQ2_CC_cut_080216_sim4_sim5_sim6_sim7_sim8_sim13_%s'%per_non_vst_SE_date, 'CC-cut'],
}
SS_tag='lowQ2_cmb_non_vst_SE'
SS_type="cmb_non_vst_SE"
print "Displaying per_non_vst_SE for q2min q2max wmin wmax expt dbg",'NA',Q2MIN,Q2MAX,WMIN,WMAX,EXPT,DBG
print "obsd=",obsd
print "SS_tag=",SS_tag
print "SS_type=",SS_type
do=DispObs('NA','NA','NA',Q2MIN,Q2MAX,WMIN,WMAX,EXPT,DBG,obsd=obsd,SS_tag=SS_tag,SS_type=SS_type)
do.disp_SE_results_1D()
for EXTRACT_D_E_FOR_NON_ALPHA in [True,False]:
        do.disp_SE_results_R2(EXTRACT_D_E_FOR_NON_ALPHA)

print "dobs_cmb_non_vst_SE_result Done"
